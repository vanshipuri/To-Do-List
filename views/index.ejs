<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-do List</title>
    <%- include('partials/header'); %>
  </head>
  <body>
     <div class="list-name"> <h2><%= listTitle %> List</h2></div>
 
      <div class="submit-form"> <!-- ✅ FORM action fixed -->
    <form action="/lists/add/<%= listTitle %>" method="POST">
      <input type="text" name="todo" placeholder="Add your task" required />
      <button type="submit">➕ Add</button>
    </form>
</div>
    <div class="container">
   <div class="form-list">     
   <ul>
  <% todos.forEach(function(task, index) { %>
    <li>
      <form action="/lists/delete/<%= listTitle %>" method="POST" style="display:inline;">
        <input type="hidden" name="taskIndex" value="<%= index %>">
        <%= task %>
        <button type="submit">❌</button>
      </form>
    </li>
  <% }) %>
</ul>
</div> 


<div class="side-container">
    <!--add url link for various lists--> 
<ul>
  <li><a href="/lists/School">School To-do List</a></li>
  <li><a href="/lists/Work">Work To-do List</a></li>
  <li><a href="/lists/Homework">Homework To-do List</a></li>
  <li><a href="/lists/Grocery">Grocery List</a></li>
</ul>
</div>
    </div>

    
   

  </body>

  <footer>
    <%- include('partials/footer'); %>
  </footer>
</html>

